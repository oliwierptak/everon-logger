{
    "name": "everon/logger",
    "description": "PSR- compliant logger with pluggable architecture",
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "monolog/monolog": "^2.1"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^9.4",
        "popo/generator": "^3.0",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Everon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EveronLoggerTests\\Suit\\": "tests/suit/",
            "EveronLoggerTests\\Stub\\": "tests/stub/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --testdox --no-coverage",
        "popo": "vendor/bin/popo generate"
    }
}
