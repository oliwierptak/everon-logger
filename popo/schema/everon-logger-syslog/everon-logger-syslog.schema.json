[
    {
        "name": "SyslogLoggerPluginConfigurator",
        "extends": "\\Everon\\Logger\\Configurator\\AbstractPluginConfigurator",
        "schema": [
            {
                "name": "pluginClass",
                "type": "string",
                "default": "\\Everon\\Logger\\Plugin\\Syslog\\SyslogLoggerPlugin::class"
            },
            {
                "name": "pluginFactoryClass",
                "type": "string"
            },
            {
                "name": "logLevel",
                "type": "string",
                "default": "debug"
            },
            {
                "name": "ident",
                "type": "string"
            },
            {
                "name": "facility",
                "type": "int",
                "default": "\\LOG_LOCAL0"
            },
            {
                "name": "shouldBubble",
                "type": "bool",
                "default": true
            },
            {
                "name": "logopts",
                "type": "int",
                "default": "\\LOG_PID"
            }
        ]
    }
]
